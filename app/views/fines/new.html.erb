<section class="md:grid md:grid-cols-2 md:gap-6">
  <article class="mt-1 md:col-span-2 md:mt-1">
    <%= form_with(model: @fine) do |form| %>
        
      <div class="overflow-hidden shadow sm:rounded-md">
        <div class="bg-white px-4 sm:mt-4">
          <div class="grid grid-cols-1 gap-4">
            
            <%= hidden_field_tag(:user_id, @user_id) %>
            
            <div class="col-span-6 sm:col-span-3 fl">
              <%= form.label :description, t('.description'), class: "block font-semibold" %>
              <%= form.text_area :description, 
                placeholder: t('.placeholder_description'),
                class: "border w-full px-3 py-5 mt-1 focus:z-10 focus:border-orange-700 focus:outline-none focus:ring-orange-700 rounded-md" %>
                <% if @fine.errors.full_messages_for(:description).each  do |error| %>
                  <ul class="list-disc list-inside">
                    <li class="text-xs text-red-500">
                      <%= error %>
                    </li>
                  </ul>
                <% end %>
              <% end %>
            </div>

            <%# Input para precio de multa%>
            <div class="col-span-6 sm:col-span-3">
              <%= form.label :fine_price, t('.fine_price'), class: "block font-semibold" %>
              <%= form.number_field :fine_price, 
                placeholder: t('.placeholder_fine_price'),
                class: "border w-full h-5 px-3 py-5 mt-1 focus:z-10 focus:border-orange-700 focus:outline-none focus:ring-orange-700 rounded-md" %>
                <% if @fine.errors.full_messages_for(:fine_price).each  do |error| %>
                  <ul class="list-disc list-inside">
                    <li class="text-xs text-red-500">
                      <%= error %>
                    </li>
                  </ul>
                <% end %>
              <% end %>
            </div>

          </div>
        </div>
        <div class="flex justify-center bg-gray-50 text-right sm:px-6 mt-2">
          <%# BotÃ³n de submit %>
          <%= button_tag(type: "submit", 
            class: "mt-2 sm:mt-0 mb-1 text-orange-100 font-bold bg-orange-500 py-2 px-2 rounded hover:brightness-110 border-2 border-black focus:z-10 focus:border-orange-900 focus:outline-none focus:ring-orange-900") do %>
            <%= content_tag(:strong, t('.submit')) %>
          <% end %>
        </div>
      </div>
    <% end %>
  </article>
</section>