<!-- Título de selección de horas de alquiler -->
<section class="mx-4 mb-2 p-4 bg-gray-800 text-gray-200 rounded-b-lg border-2 border-black">
  <h4 class="text-2xl uppercase text-center">
    <%= t('.title') %>
  </h4>
</section>

<%= form_with(model: @rental) do |form| %>
  <%= hidden_field_tag(:car_id, @car_id) %>
  
  <div class="flex flex-col items-center justify-center mt-4">
    <div class="border-2 border-black bg-orange-300 p-4">
      <%= form.label :initial_hours_quantity, class: "block text-sm font-bold text-gray-700 mb-2" %>
      <%= form.select :initial_hours_quantity, options_for_select(1..24) %>
    </div>
    <div class="mt-4">
      <%= button_tag(type: "submit", class: "focus:outline-none text-white bg-orange-500 hover:bg-orange-700 focus:ring-4 focus:ring-orange-300 font-medium rounded-lg text-sm px-5 dark:focus:ring-orange-900 py-3 border-2 border-black") do %>
        <%= content_tag(:strong, t('.pay')) %>
      <% end %>
    </div>
  </div>

<% end %>

