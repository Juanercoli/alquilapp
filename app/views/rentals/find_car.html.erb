<section class="mx-4 mb-2 p-4 bg-gray-800 text-gray-200 rounded-b-lg border-2 border-black">
  <h4 class="text-2xl uppercase text-center">
    <%= t('.title') %>
  </h4>
</section>

<div class="flex justify-center align-center mt-4">
  <div data-controller="car-unlock-map" data-car-unlock-map-person="<%= Current.user.to_json %>" data-car-unlock-map-car="<%= @car %>" data-map-url="/cars/" data-car-unlock-map-target="placeholder class="leaflet-container" class="border-2 border-black rounded-lg" style="width: 400px; height: 200px; position: relative; outline: none;" >
  </div>
</div>

<%= form_with(url: find_car_path(@rental.id)) do |form| %>
  <div class="flex flex-col items-center justify-center mt-4">
    <div>
      <%= form.label :patent, t('.patent'), class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :patent, 
                  placeholder: t('.placeholder_patent'),
                  class: "border w-full h-5 px-3 py-5 mt-1 focus:z-10 focus:border-blue-700 focus:outline-none focus:ring-blue-700 rounded-md" %>
    </div>
    <div class="mt-4">
      <%= button_tag(type: "submit", class: "focus:outline-none text-white bg-blue-500 hover:bg-blue-200 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 dark:focus:ring-blue-900 py-3 border-2 border-black") do %>
        <%= content_tag(:strong, t('.unlock')) %>
      <% end %>
    </div>
  </div>
<% end %>
