<h1 class="text-2xl bold">FLOTA DE AUTOS</h1>
<% if(@cars.count > 0)%>
  <div class="p-10 grid grid-cols-1 sm:grid-cols-1 md:grid-cols-3 lg:grid-cols-3 xl:grid-cols-3 gap-5">
      <% @cars.each do |car| %>
        <%= render "card", car: car %>
      <% end %>
  </div>
<% else %>
  <h4> No hay autos disponibles </h4>
<% end %>
