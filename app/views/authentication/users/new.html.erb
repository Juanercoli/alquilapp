<%= form_with(model: @user) do |form| %>

  <%# Permite mostrar los mensajes de error asociados %>
  <% @user.errors.full_messages.each do |error| %>
    <div>
      <%= error %>
    </div>
  <% end %>

  <%# Input para dni %>
  <div>
    <%= form.label :dni %>
    <%= form.text_field :dni %>
  </div>

  <%# Input para nombre %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <%# Input para apellido %>
  <div>
    <%= form.label :surname %>
    <%= form.text_field :surname %>
  </div>

  <%# Input para email %>
  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>

  <%# Input para phone %>
  <div>
    <%= form.label :phone %>
    <%= form.text_field :phone %>
  </div>

  <%# Input para password %>
  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <%# Input para driver license expiration %>
  <div>
    <%= form.label :driver_license_expiration %>
    <%= form.date_select :driver_license_expiration, start_year: Time.now.year, end_year: Time.now.year + 30 %>
  </div>

  <%# Input para driver license %>
  <div>
    <%= form.label :driver_license %>
    <%= form.file_field :driver_license %>
  </div>

  <%# Input para birthdate %>
  <div>
    <%= form.label :birthdate %>
    <%= form.date_select :birthdate, start_year: 1900, end_year: Time.now.year %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
